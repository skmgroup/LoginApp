@model LoginApp.ViewModel.EncryptForm

@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome!</h2>

<form method="post" action="/welcome/encrypt">
    <div class="form-group">
        @Html.TextBoxFor(m => m.Message, new { @class = "form-control" })

    </div>
    
    <button type="submit" class="btn btn-primary">Encrypt</button>
</form>

@if (!string.IsNullOrEmpty(Model.Encrypted))
{
    <hr />
    
    <div class="form-group col-md-4">
        @Html.LabelFor(m => m.Encrypted)
        @Html.TextAreaFor(m => m.Encrypted, new { @class = "form-control" })
    </div>

    <div class="form-group col-md-4">
        @Html.LabelFor(m => m.Decrypted)
        @Html.TextAreaFor(m => m.Decrypted, new { @class = "form-control" })
    </div>
}

